<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_member_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nextbest.skalkowski.whatwedo.activity.MemberManageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.design.widget.TextInputLayout
              android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/autoCompleteTextViewSearchUserHint"
                android:id="@+id/autoCompleteTextViewSearchUser" />
            </android.support.design.widget.TextInputLayout>

            <ListView
                style="@style/listViewStyle"
                android:id="@+id/listViewMembers" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
